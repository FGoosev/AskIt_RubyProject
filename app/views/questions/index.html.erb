<% provide :page_title, "Questions" %>
<% currently_at 'Questions' %>
<div class="container">
  <h1>Hello^ it's all questions</h1>
  <%= paginate @question %>
  <% @question.each do |question| %>
    <article class="card mb-3">
      <div class="card-body">
        <h4><%= truncate strip_tags(question.title), length: 50 %></h4>
        <section class="card-text">
          <time datetime="<%= question.formattedDate %>">
            <small><%= question.formattedDate %></small>
          </time>
          <p class="my-2"><%= truncate strip_tags(question.body), length: 100 %></p>
        </section>
        <%= link_to "Читать", question_path(question), class: 'btn btn-primary' %>
        <%= link_to "Редактировать", edit_question_path(question),class: 'btn btn-secondary' %>
        <%= link_to "Удалить", question_path(question), class: 'btn btn-danger', data: {method: :delete, confirm: "Уверены?"} %>
      </div>
    </article>
  <% end %>
  <%= paginate @question %>
</div>