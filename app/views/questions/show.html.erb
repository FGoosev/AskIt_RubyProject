<% provide :page_title, "№#{@question.id}" %>
<% currently_at %>
<div class="container">
  <h2 class="mb-4"><%=@question.title %></h2>
  <p class="lead my-3"><%=@question.body %></p>
  <%= link_to "Редактировать", edit_question_path(@question),class: 'btn btn-secondary' %>
  <%= link_to "Удалить", question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: "Уверены?"} %>
  <hr class="my-3">
  <% @answers.each do |f| %>
    <div class="alert alert-dark">
      <p><%= f.body %></p>
      <time datetime="<%= f.formattedDate %>">
        <small><%= f.formattedDate %></small>
      </time>
      <%= link_to 'Edit', edit_question_an_path(@question,f), class: 'btn btn-warning btn-sm' %>
      <%= link_to 'Delete', question_an_path(@question, f), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: 'Are you sure?'} %>
    </div>
  <% end %>
  <hr class="my-3">
  <h3>Write your answer!</h3>
  <%= render 'shared/errors', object: @answer %>
  <%= form_with model: [@question,@answer] do |a| %>
    <div class="mb-3 mt-3 row">
      <div class="col-sm-10 ">
        <%= a.text_area :body, class: 'form-control' %>
      </div>
    </div>
    <%= a.submit "Add answer", class: 'btn btn-primary' %>
  <% end %>
</div>